  "bugs": {
    "url": "https://github.com/ovnny/exercicioTDD/issues"
  },
  "homepage": "https://github.com/ovnny/exercicioTDD#readme",
  "dependencies": {
    "chai": "^4.2.0",
    "lokijs": "^1.5.11",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "sinon": "^9.2.4"
  }
}
